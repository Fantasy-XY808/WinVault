<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinVault.Pages.QuickSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Page.Resources>
        <!-- 设置卡片样式 -->
        <Style x:Key="SettingCardStyle" TargetType="Grid">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- 设置按钮样式 -->
        <Style x:Key="SettingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,4,8,4"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <!-- 分类标题样式 -->
        <Style x:Key="CategoryTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- 组标题样式 -->
        <Style x:Key="GroupTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="24,16">
        <StackPanel Spacing="24">
            <!-- 页面标题 -->
            <StackPanel>
                <TextBlock Text="Windows快捷设置" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,8"/>
                <TextBlock Text="快速访问常用的Windows系统设置和功能"
                          Style="{StaticResource SubtitleTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 系统设置 -->
            <StackPanel>
                <TextBlock Text="系统设置" Style="{StaticResource CategoryTitleStyle}"/>
                
                <!-- 显示设置 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="显示设置" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="调整分辨率、缩放和多显示器设置"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="显示设置" Style="{StaticResource SettingButtonStyle}" Click="OpenDisplaySettings_Click"/>
                        <Button Content="夜间模式" Style="{StaticResource SettingButtonStyle}" Click="ToggleNightLight_Click"/>
                        <Button Content="多显示器" Style="{StaticResource SettingButtonStyle}" Click="OpenProjectSettings_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 声音设置 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="声音设置" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="调整音量、音频设备和声音方案"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="声音设置" Style="{StaticResource SettingButtonStyle}" Click="OpenSoundSettings_Click"/>
                        <Button Content="音量混合器" Style="{StaticResource SettingButtonStyle}" Click="OpenVolumeMixer_Click"/>
                        <Button Content="录音设备" Style="{StaticResource SettingButtonStyle}" Click="OpenRecordingDevices_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 网络设置 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="网络设置" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="管理WiFi、以太网和网络连接" 
                                  FontSize="12" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="网络设置" Style="{StaticResource SettingButtonStyle}" Click="OpenNetworkSettings_Click"/>
                        <Button Content="WiFi设置" Style="{StaticResource SettingButtonStyle}" Click="OpenWiFiSettings_Click"/>
                        <Button Content="网络诊断" Style="{StaticResource SettingButtonStyle}" Click="RunNetworkDiagnostic_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- 系统工具 -->
            <StackPanel>
                <TextBlock Text="系统工具" Style="{StaticResource CategoryTitleStyle}"/>

                <!-- 任务管理器 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="系统监控" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="查看系统性能和运行状态"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="任务管理器" Style="{StaticResource SettingButtonStyle}" Click="OpenTaskManager_Click"/>
                        <Button Content="资源监视器" Style="{StaticResource SettingButtonStyle}" Click="OpenResourceMonitor_Click"/>
                        <Button Content="性能监视器" Style="{StaticResource SettingButtonStyle}" Click="OpenPerformanceMonitor_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 磁盘管理 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="磁盘管理" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="管理磁盘空间和存储设备" 
                                  FontSize="12" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="磁盘管理" Style="{StaticResource SettingButtonStyle}" Click="OpenDiskManagement_Click"/>
                        <Button Content="磁盘清理" Style="{StaticResource SettingButtonStyle}" Click="OpenDiskCleanup_Click"/>
                        <Button Content="存储设置" Style="{StaticResource SettingButtonStyle}" Click="OpenStorageSettings_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- 安全和更新 -->
            <StackPanel>
                <TextBlock Text="安全和更新" Style="{StaticResource CategoryTitleStyle}"/>

                <!-- Windows安全中心 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="系统安全" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="管理防病毒、防火墙和系统更新"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="Windows安全" Style="{StaticResource SettingButtonStyle}" Click="OpenWindowsSecurity_Click"/>
                        <Button Content="Windows更新" Style="{StaticResource SettingButtonStyle}" Click="OpenWindowsUpdate_Click"/>
                        <Button Content="防火墙设置" Style="{StaticResource SettingButtonStyle}" Click="OpenFirewallSettings_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 个性化设置 -->
                <Grid Style="{StaticResource SettingCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="个性化" Style="{StaticResource GroupTitleStyle}"/>
                        <TextBlock Text="更改主题、颜色和背景" 
                                  FontSize="12" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="个性化" Style="{StaticResource SettingButtonStyle}" Click="OpenPersonalizationSettings_Click"/>
                        <Button Content="主题设置" Style="{StaticResource SettingButtonStyle}" Click="OpenThemeSettings_Click"/>
                        <Button Content="桌面背景" Style="{StaticResource SettingButtonStyle}" Click="OpenWallpaperSettings_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
