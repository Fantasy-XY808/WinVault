<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinVault.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinVault.Pages"
    xmlns:controls="using:WinVault.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题栏 -->
        <controls:PageHeaderControl Grid.Row="0"
            Title="关于"
            Description="WinVault 系统管理平台信息"
            Icon="&#xE946;"
            Status="版本 1.0.0"
            StatusType="Info"
            Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                <InfoBar
                    Title="版本信息"
                    Message="当前版本: 1.0.0"
                    Severity="Informational"
                    IsOpen="True"
                    IsClosable="False"/>

                <TextBlock TextWrapping="Wrap">
                    WinVault是一个简单易用的Windows系统工具集合，帮助用户快速管理和优化Windows系统。
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Style="{ThemeResource BodyTextBlockStyle}">
                    此应用程序使用WinUI 3开发，提供现代化的用户界面和丰富的功能体验。
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Style="{ThemeResource BodyTextBlockStyle}">
                    © 2024 WinVault 保留所有权利
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page> 