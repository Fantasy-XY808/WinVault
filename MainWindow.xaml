<Window
    x:Class="WinVault.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinVault"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <!-- 工作的NavigationView版本 -->
    <Grid>
        <NavigationView x:Name="NavView"
                        SelectionChanged="NavigationView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="主页" Tag="home" Icon="Home"/>
                <NavigationViewItem Content="硬件信息" Tag="hardware" Icon="Save"/>
                <NavigationViewItem Content="服务管理" Tag="services" Icon="Admin"/>
                <NavigationViewItem Content="命令查询" Tag="commandquery" Icon="Help"/>
                <NavigationViewItem Content="快速设置" Tag="quicksettings" Icon="Setting"/>
                <NavigationViewItem Content="工具箱" Tag="exetools" Icon="Repair"/>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="设置" Tag="settings" Icon="Setting"/>
                <NavigationViewItem Content="关于" Tag="about" Icon="Help"/>
            </NavigationView.FooterMenuItems>

            <Frame x:Name="ContentFrame" NavigationFailed="ContentFrame_NavigationFailed"/>
        </NavigationView>
    </Grid>
</Window>
