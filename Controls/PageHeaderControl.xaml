<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinVault.Controls.PageHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinVault.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- 无边框设计，直接嵌入页面 -->
    <StackPanel Spacing="0" Margin="0,0,0,24">
        <!-- 标题栏内容区域 -->
        <Grid Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 页面图标 -->
            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    Margin="0,0,16,0">
                <FontIcon x:Name="PageIcon" Glyph="&#xE7C3;" FontSize="24" Foreground="White"/>
            </Border>

            <!-- 标题信息 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="WinVault" FontSize="24" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="/" FontSize="24" FontWeight="SemiBold" Opacity="0.5"/>
                    <TextBlock x:Name="PageTitle" Text="页面标题" FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
                <TextBlock x:Name="PageDescription" Text="页面描述" FontSize="14" Opacity="0.7"/>
            </StackPanel>

            <!-- 状态指示器 -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="4">
                <Border x:Name="StatusIndicator"
                        Background="{ThemeResource SystemFillColorSuccessBrush}"
                        CornerRadius="8"
                        Padding="8,4">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon x:Name="StatusIcon" Glyph="&#xE73E;" FontSize="12" Foreground="White"/>
                        <TextBlock x:Name="StatusText" Text="正常" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
                <TextBlock x:Name="TimestampText"
                           Text="刚刚更新"
                           FontSize="10"
                           Opacity="0.5"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- 艺术分割线 -->
        <Border Height="1"
                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                Opacity="0.3"
                Margin="0,0,0,0"/>
    </StackPanel>
</UserControl>
